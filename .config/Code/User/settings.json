{
    "workbench.iconTheme": "Monokai Pro Icons",
    "files.autoSave": "onFocusChange",
    "window.restoreWindows": "all",
    "git-graph.maxDepthOfRepoSearch": 5,
    "todo-tree.highlights.enabled": true,
    "editor.rulers": [
        80,
        120
    ],
    "todo-tree.tree.showScanModeButton": false,
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "tag",
        "opacity": 40,
        "iconColour": "#FEB548",
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "START HERE"
    ],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "light-bulb",
            "gutterIcon": true,
        },
        "FIXME": {
            "foreground": "white",
            "background": "#F05D5E",
            "iconColour": "#F05D5E",
            "gutterIcon": true,
            "icon": "flame",
            "type": "whole-line"
        },
        "HACK": {
            "foreground": "white",
            "background": "#F05D5E",
            "iconColour": "#F05D5E",
            "gutterIcon": true,
            "icon": "thumbsdown",
            "type": "whole-line"
        },
        "BUG": {
            "foreground": "white",
            "background": "#FEB548",
            "iconColour": "#FEB548",
            "gutterIcon": true,
            "icon": "bug",
            "type": "text"
        },
        "START HERE": {
            "icon": "star",
            "gutterIcon": true,
            "foreground": "white",
            "background": "green"
        }
    },
    "workbench.colorTheme": "Monokai",
    "git.enableSmartCommit": true,
    "workbench.statusBar.visible": true,
    "editor.minimap.enabled": false,
    "git.enableSmartCommit": true,
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "stackoverflow"
    ],
    "window.zoomLevel": -1,
    "git.confirmSync": false,
    "git.autofetch": true,
    "terminal.integrated.cursorBlinking": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "security.workspace.trust.untrustedFiles": "open",
    // "go.toolsGopath": "/home/johndoes/go/tools",
    // "go.goroot": "/usr/local/go/bin"
    // disable tabs, ensure that Ctrl+Tab opens recent files, hide "open editors" in left file tree
    "workbench.editor.showTabs": "single",
    "workbench.editor.enablePreview": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "haskell.manageHLS": "GHCup",
    // "explorer.openEditors.visible": 0
    "terminal.integrated.scrollback": 9999999999,
    "editor.guides.bracketPairs": "active",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "workbench.activityBar.location": "hidden",
    "workbench.panel.opensMaximized": "always",
}
